@using Modelo
@model Costo_Cuota
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminación de cuotas</h1>
<p>Formulario para borrar un cuota en el sistema </p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Seguro que desea eliminar la cuota del cliente : @Model.Cliente.CedulaCliente</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Delete">

                <input type="hidden" asp-for="Costo_CuotaId" />

                <div class="form-group">
                    <label class="control-label"> Monto Solicitado:</label>
                    <input class="form-control" asp-for="MontoSolicitado" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Numero de Cuotas:</label>
                    <input class="form-control" asp-for="NumeroCuotas" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Cuota Mensual:</label>
                    <input class="form-control" asp-for="CalculoPagoTotal" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Numero de Cuotas mensuales:</label>
                    <input class="form-control" asp-for="NumeroCuotas" />
                </div>

                <div class="form-group">
                    <label class="control-label"> Cliente:</label>
                    <input class="form-control" asp-for="@Model.Cliente.CedulaCliente" disabled />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Eliminar el cliente" />
                </div>
            </form>

        </div>
    </div>

</div>