@using Modelo
@model Costo_Cuota
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edición de cuotas</h1>
<p>Formulario para editar una cuota en el sistema </p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted está actualizando la cuota: @Model.Costo_CuotaId</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="Costo_CuotaId" />
                <div class="form-group">
                    <label class="control-label"> Monto Solicitado:</label>
                    <input class="form-control" asp-for="MontoSolicitado" />
                </div>
                <div class="form-group">
                    <label class="control-label"> Numero de Cuotas:</label>
                    <input class="form-control" asp-for="NumeroCuotas" />
                </div>
                <div class="form-group">
                    <label class="control-label">Vigencia Tasa Anual: </label>

                    <select class="form-control"
                            asp-for="VigenciaTasaAnualId"
                            asp-items="@ViewBag.selectListVigencia">
                        <option value="">***Selecciona la vigencia de la Tasa Anual***</option>
                    </select>

                </div>
                <div class="form-group">
                    <label class="control-label">Cliente: </label>

                    <select class="form-control"
                            asp-for="ClienteId"
                            asp-items="@ViewBag.selectListCliente">
                        <option value="">***Selecciona un Cliente***</option>
                    </select>

                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar la cuota" />
                </div>
            </form>

        </div>
    </div>

</div>