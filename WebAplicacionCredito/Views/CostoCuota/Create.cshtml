@using Modelo
@model Costo_Cuota
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creacion de cuotas</h1>
<p>Formulario para crear una cuota en el sistema de un cliente </p>

<div class=" row ">
    <div class=" col-se-10 ">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label class="control-label"> Monto Solicitado:</label>
                <input class="form-control" asp-for="MontoSolicitado" />
            </div>
            <div class="form-group">
                <label class="control-label"> Numero de Cuotas:</label>
                <input class="form-control" asp-for="NumeroCuotas" />
            </div>
            <div class="form-group">
                <label class="control-label">Vigencia Tasa Anual: </label>

                <select class="form-control"
                        asp-for="VigenciaTasaAnualId"
                        asp-items="@ViewBag.selectListVigencia">
                    <option value="">***Selecciona la vigencia de la Tasa Anual***</option>
                </select>

            </div>
            <div class="form-group">
                <label class="control-label">Cliente: </label>

                <select class="form-control"
                        asp-for="ClienteId"
                        asp-items="@ViewBag.selectListClientes">
                    <option value="">***Selecciona un Cliente***</option>
                </select>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear la cuota" />
                </div>

            </div>
        </form>
    </div>
</div>